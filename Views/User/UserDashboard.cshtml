@{
    ViewData["Title"] = "User Dashboard";
}
@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/UserDashboard.css" asp-append-version="true" />
    <title>@ViewData["Title"]</title>
    <style>
        .alert {
            position: absolute;
            top: 0;
            width: 100%;
            height: 50px;
            padding: 10px;
            text-align: center;
            font-size: 1.1rem;
            z-index: 10;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }
        
    </style>
</head>
<body>
    <!-- Display Success or Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
   
    <div class="banner">
        <div class="banner-content">
            <h1>Welcome, @ViewData["Username"] &#128522;</h1>
            <h1>Welcome to the Passport Generation System</h1>
            <p>Your trusted partner in simplifying the passport application process.</p>
        </div>
    </div>

     

    <h1>User Dashboard</h1>

    <div class="options-list">
        <!-- Heading 1: Application Management -->
        <div class="option-group">
            <h2>Create Your Application Here </h2>

            <!-- Card for creating passport application -->
            <div class="option-card">
                <h3>Create Passport Application</h3>
                <a asp-action="CreateApplication" class="btn btn-primary">Create Now</a>
            </div>

           

        <!-- Heading 2: Application Tracking -->
        <div class="option-group">
            <h2>Edit and Download Passport Here</h2>

            <!-- Card for viewing application status -->
            <div class="option-card">
                <h3>View Application Status</h3>
                <a asp-action="ViewMyApplications" class="btn btn-primary">View Now</a>
            </div>

            
        </div>
    </div>


    <script>
        window.setTimeout(function () {
            $(".alert").fadeTo(3000, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 4000);
     
    </script>

</body>
</html>
