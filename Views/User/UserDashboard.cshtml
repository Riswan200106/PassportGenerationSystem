@{
    ViewData["Title"] = "User Dashboard";
}
@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }

        h1 {
            text-align: center;
            margin-top: 30px;
            color: #333;
            font-size: 2.5rem;
        }

        /* Banner Section */
        .banner {
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('../img/user.png');
            background-size: cover;
            background-position: center;
            height: 600px;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            margin: 0;
            position: relative;
        }

        .banner-content h1 {
            color:white;
            font-size: 50px;
            margin-bottom: 20px;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
            animation: fadeIn 2s ease-out;
        }

        .banner-content p {
            font-size: 1.5em;
            text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.6);
        }

        .options-list {
            max-width: 900px;
            margin: 30px auto;
            padding: 20px;
        }

        .option-group {
            margin-bottom: 30px;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .option-group h2 {
                font-size: 1.8rem;
                color: #0033a0;
                margin-bottom: 15px;
                border-bottom: 2px solid #ddd;
                padding-bottom: 10px;
            }

        .option-card {
            margin-top: 15px;
            padding: 15px;
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 6px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease;
        }

            .option-card:hover {
                transform: scale(1.02);
            }

            .option-card h3 {
                margin-bottom: 10px;
                color: #2c3e50;
                font-size: 1.4rem;
            }

            .option-card a {
                text-decoration: none;
                color: white;
                font-size: 16px;
                padding: 8px 12px;
                border: 1px solid #3498db;
                border-radius: 4px;
                transition: all 0.3s ease;
            }

                .option-card a:hover {
                    background-color: #3498db;
                    color: #fff;
                }
    </style>
</head>
<body>
    <!-- Display Success or Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
   

    <div class="banner">
        <div class="banner-content">
            <h1>Welcome to the Passport Generation System</h1>
            <p>Your trusted partner in simplifying the passport application process.</p>
        </div>
    </div>

    <h1>User Dashboard</h1>

    <div class="options-list">
        <!-- Heading 1: Application Management -->
        <div class="option-group">
            <h2>Create Your Application Here </h2>

            <!-- Card for creating passport application -->
            <div class="option-card">
                <h3>Create Passport Application</h3>
                <a asp-action="CreateApplication" class="btn btn-primary">Create Now</a>
            </div>

           

        <!-- Heading 2: Application Tracking -->
        <div class="option-group">
            <h2>Edit and Download Passport Here</h2>

            <!-- Card for viewing application status -->
            <div class="option-card">
                <h3>View Application Status</h3>
                <a asp-action="ViewMyApplications" class="btn btn-primary">View Now</a>
            </div>

            
        </div>
    </div>


    <script>
        window.setTimeout(function () {
            $(".alert").fadeTo(5000, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 4000);
    </script>

</body>
</html>
