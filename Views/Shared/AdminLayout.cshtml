<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/AdminUser.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav>
            <div class="New">
                <img src="~/img/logo-photoaidcom-cropped.png" alt="Admin Logo" class="logo">
            </div>
            <ul style="padding-right:80px;">
                <li><a asp-controller="Admin" asp-action="AdminDashboard">Dashboard</a></li>
                <li><a asp-controller="Default" asp-action="Logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
    <!-- Footer Section -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-quote">
                <p>"A passport is not just a document, it's your gateway to the world!"</p>
            </div>
            <div class="footer-contact">
                <p><strong>Contact Us:</strong></p>
                <p>Phone: +1 234 567 890</p>
                <p>Address: 1234 Passport Ave, City, Country</p>
            </div>
            <div class="footer-social">
                <a href="https://facebook.com" target="_blank" class="social-icon">
                    <i class="fab fa-facebook"></i>
                </a>
                <a href="https://instagram.com" target="_blank" class="social-icon">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="https://twitter.com" target="_blank" class="social-icon">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="https://linkedin.com" target="_blank" class="social-icon">
                    <i class="fab fa-linkedin"></i>
                </a>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 Passport Generation System. All rights reserved.</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
