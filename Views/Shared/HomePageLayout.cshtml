<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

  
    <style>
        body, ul, li, a {
            margin: 0;
            padding: 0;
            text-decoration: none;
            list-style: none;
            font-family: Arial, sans-serif;
        }

        /* Header and Navigation Styling */
        header {
            background-color: #004080;
            color: white;
            position: static;
            width: 100%;
            height: 100px;
            top: 0;
            z-index: 1000;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.2);
        }

            header nav {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 0px;
                height: 100%;
     
            }

        .logo {
            padding-bottom: 80px;
            height: 179px;
        }

        header nav ul {
            display: flex;
            align-items: center;
        }

            header nav ul li {
                margin: 0 15px;
            }

                header nav ul li a {
                    color: white;
                    font-weight: bold;
                    font-size: 16px;
                    transition: color 0.3s ease;
                }

                    header nav ul li a:hover {
                        color: #ffcc00; 
                    }

        .New {
            margin-top: 80px;
            padding: 20px;
        }

        /* Footer Styling */
        .footer {
            background-color: #004080; /* Light grey background */
            color: black; /* Dark text */
            padding: 30px 20px;
            font-size: 1.1em;
            text-align: center;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Quote Section */
        .footer-quote p {
            font-size: 1.1em;
            font-style: italic;
            margin: 10px 0;
            color:white;
        }

        /* Contact Information Section */
        .footer-contact p {
            margin: 5px 0;
        }

            .footer-contact p strong {
                font-weight: bold;
                color: white;
            }

        .footer-contact p {
            color: white;
        }

        /* Social Media Icons */
        .footer-social {
            margin: 20px 0;
        }

            .footer-social .social-icon {
                margin: 0 15px;
                color:white;
                font-size: 2em;
                transition: color 0.3s ease;
            }

                .footer-social .social-icon:hover {
                    color: #0033a0; /* Highlight color on hover */
                }

        /* Footer Bottom Section (All Rights Reserved) */
        .footer-bottom {
            margin-top: 20px;
            font-size: 0.9em;
            color:white;
        }

       
    </style>
</head>
<body>
    <header>
        <nav>
            <!-- Logo Section -->
            <div class="New">
                <img src="~/img/logo.png" alt="Logo" class="logo">
            </div>
            <!-- Navigation Links -->
            <ul>
                <li><a asp-controller="Default" asp-action="Index">Home</a></li>
                <li><a asp-controller="Default" asp-action="About">About Us</a></li>
                <li><a asp-controller="Default" asp-action="SignIn">Signin</a></li>
                <li><a asp-controller="Default" asp-action="CreateUser">Signup</a></li>
                <li><a asp-controller="Default" asp-action="Contact">Contact Us</a></li>              
            </ul>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
    <!-- Footer Section -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-quote">
                <p>"A passport is not just a document, it's your gateway to the world!"</p>
            </div>

            <div class="footer-contact">
                <p><strong>Contact Us:</strong></p>
                <p>Phone: +1 234 567 890</p>
                <p>Address: 1234 Passport Ave, City, Country</p>
            </div>

            <div class="footer-social">
                <a href="https://facebook.com" target="_blank" class="social-icon">
                    <i class="fab fa-facebook"></i>
                </a>
                <a href="https://instagram.com" target="_blank" class="social-icon">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="https://twitter.com" target="_blank" class="social-icon">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="https://linkedin.com" target="_blank" class="social-icon">
                    <i class="fab fa-linkedin"></i>
                </a>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2024 Passport Generation System. All rights reserved.</p>
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
