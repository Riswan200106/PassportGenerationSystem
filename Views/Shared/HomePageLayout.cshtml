<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        body, ul, li, a {
            margin: 0;
            padding: 0;
            text-decoration: none;
            list-style: none;
            font-family: Arial, sans-serif;
        }

        /* Header and Navigation Styling */
        header {
            background-color: #004080;
            color: white;
            position: static;
            width: 100%;
            height: 100px;
            top: 0;
            z-index: 1000;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.2);
        }

            header nav {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 0px;
                height: 100%;
            }

        .logo {
            height: 90px; /* Adjust logo size */
        }

        /* Navbar Styling */
        header nav .navbar-nav {
            display: flex;
            align-items: center;
        }

            header nav .navbar-nav li {
                margin: 0 15px;
            }

                header nav .navbar-nav li a {
                    color: white;
                    font-weight: bold;
                    font-size: 16px;
                    transition: color 0.3s ease;
                   
                }

                    header nav .navbar-nav li a:hover {
                        color: #ffcc00;
                    }

        /* Navbar Toggle Icon */
        .navbar-toggler-icon {
            background-color: black; /* Custom color for the hamburger icon */
        }

        .navbar-nav .active {
            color: #ffcc00; /* Active link color */
        }

        /* Fix the z-index and positioning of the dropdown */
        .navbar-collapse {
            position: relative;
            z-index: 1050; /* Ensure the dropdown content appears on top */
        }

        .navbar-nav {
            z-index: 1; /* Ensure other navbar elements stay below the dropdown */
           
        }

        /* Footer Styling */
        .footer {
            background-color: #004080;
            color: black;
            padding: 30px 20px;
            font-size: 1.1em;
            text-align: center;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-quote p {
            font-size: 1.1em;
            font-style: italic;
            margin: 10px 0;
            color: white;
        }

        .footer-contact p {
            margin: 5px 0;
        }

            .footer-contact p strong {
                font-weight: bold;
                color: white;
            }

        .footer-contact p {
            color: white;
        }

        .footer-social {
            margin: 20px 0;
        }

            .footer-social .social-icon {
                margin: 0 15px;
                color: white;
                font-size: 2em;
                transition: color 0.3s ease;
            }

                .footer-social .social-icon:hover {
                    color: #0033a0;
                }

        .footer-bottom {
            margin-top: 20px;
            font-size: 0.9em;
            color: white;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-blue">
            <div class="container">
                <!-- Logo Section -->
                <a class="navbar-brand" href="@Url.Action("Index", "Default")">
                    <img src="~/img/logo-photoaidcom-cropped.png" alt="Logo" class="logo">
                </a>
                <!-- Navbar Toggle Button for Mobile Devices -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Index", "Default")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("About", "Default")">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("SignIn", "Default")">Signin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("CreateUser", "Default")">Signup</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact", "Default")">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div>
        @RenderBody()
    </div>

    <!-- Footer Section -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-quote">
                <p>"A passport is not just a document, it's your gateway to the world!"</p>
            </div>

            <div class="footer-contact">
                <p><strong>Contact Us:</strong></p>
                <p>Phone: +1 234 567 890</p>
                <p>Address: 1234 Passport Ave, City, Country</p>
            </div>

            <div class="footer-social">
                <a href="https://facebook.com" target="_blank" class="social-icon">
                    <i class="fab fa-facebook"></i>
                </a>
                <a href="https://instagram.com" target="_blank" class="social-icon">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="https://twitter.com" target="_blank" class="social-icon">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="https://linkedin.com" target="_blank" class="social-icon">
                    <i class="fab fa-linkedin"></i>
                </a>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2024 Passport Generation System. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
